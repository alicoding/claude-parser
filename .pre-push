#!/bin/bash
# Pre-push hook to run local GitHub Actions before pushing to remote
# This prevents failed CI builds on GitHub

protected_branch='main'
current_branch=$(git symbolic-ref HEAD | sed 's!refs\/heads\/!!')

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}🔒 Pre-push hook: Testing locally before push${NC}"

# Only run on main branch pushes (or configure as needed)
if [[ "$current_branch" == "$protected_branch" ]]; then
    echo -e "${YELLOW}📋 Running local CI for protected branch: $protected_branch${NC}"

    # Run our local CI script
    if [[ -f "scripts/test-local-ci.sh" ]]; then
        echo -e "${BLUE}🚀 Running local GitHub Actions...${NC}"

        # Run local CI testing
        if ! bash scripts/test-local-ci.sh ci; then
            echo -e "${RED}❌ Local CI failed! Push blocked.${NC}"
            echo -e "${YELLOW}💡 Fix the issues and try pushing again${NC}"
            echo -e "${YELLOW}💡 Or run: ./scripts/test-local-ci.sh${NC}"
            exit 1
        fi

        echo -e "${GREEN}✅ Local CI passed! Proceeding with push...${NC}"
    else
        echo -e "${YELLOW}⚠️  Local CI script not found, skipping local tests${NC}"
    fi
else
    echo -e "${YELLOW}📋 Non-protected branch ($current_branch), skipping local CI${NC}"
fi

echo -e "${GREEN}✅ Pre-push hook completed successfully${NC}"
exit 0
